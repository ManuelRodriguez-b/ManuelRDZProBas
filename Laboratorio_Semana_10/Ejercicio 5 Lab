# conversor.py
def km_a_millas(km):
  """Convierte kil√≥metros a millas."""
  millas = km * 0.621371
  return millas

def celsius_a_fahrenheit(celsius):
  """Convierte grados Celsius a Fahrenheit."""
  fahrenheit = (celsius * 9/5) + 32
  return fahrenheit

def litros_a_galones(litros):
  """Convierte litros a galones."""
  galones = litros * 0.264172
  return galones
